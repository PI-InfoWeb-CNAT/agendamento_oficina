@model oficinadomarcio.Models.Produto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-white d-flex justify-content-center">Produto</h2>

<div class="row">
    <div class="col-md-8 m-auto d-flex justify-content-center mt-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-white" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Categoria, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Preco, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default bg-custom-yellow text-white my-4" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<div class="d-flex justify-content-center">
    @Html.ActionLink("Voltar", "Index")
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
    }
