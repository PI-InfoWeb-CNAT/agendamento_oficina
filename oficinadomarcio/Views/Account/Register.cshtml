@model oficinadomarcio.Models.RegisterViewModel
@{
    ViewBag.Title = "Cadastre-se";
}

<h2 class="text-white m-auto">@ViewBag.Title.</h2>

@using (Html.BeginForm("Cadastre-se", "Account", FormMethod.Post, new { @class = "row g-3 m-auto", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="col-md-12">
        @Html.LabelFor(m => m.Email, new { @class = "control-label bg-custom" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control bg-transparent border-warning" })
    </div>
    <div class="col-md-6">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control bg-transparent border-warning " })
    </div>
    <div class="col-md-6">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control bg-transparent border border-warning" })
    </div>
    <div class="col-md-12">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrar" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
