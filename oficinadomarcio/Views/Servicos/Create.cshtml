@model oficinadomarcio.Models.Servico

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Servico", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "m-auto d-flex flex-column p-4", role = "form" }))
