@{
    ViewBag.Title = "Oficina do Márcio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid body-content m-0 p-0">

    <div id="carouselExampleIndicators" class="carousel slide-fade" data-ride="carousel" >
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Assets/Group 1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Assets/2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Assets/Group3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container-fluid container-custom p-0">
        <div class="row h-100 w-100">
            <div class="justify-content-center align-items-center d-inline-flex bg-custom p-0">
                <span class="fs-2 text-uppercase">experiência com veículos aspirados, turbo ou 4x4</span>
            </div>
        </div>
    </div>
    <div class="row h-100 w-100">
        <img src="~/Assets/troller.png" class="img-body"/>
    </div>
    

</div>





