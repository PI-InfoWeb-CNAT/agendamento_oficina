@model oficinadomarcio.Models.Veiculo

@{
    ViewBag.Title = "Veiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-white d-flex justify-content-center my-5">Registro de veículo</h2>

<div class="row">
    <div class="col-md-8 m-auto d-flex justify-content-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-white" })
                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-white" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    @Html.LabelFor(model => model.Ano, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Ano, new { htmlAttributes = new { @class = "form-control bg-transparent border-custom" } })
                        @Html.ValidationMessageFor(model => model.Ano, "", new { @class = "text-white" })
                    </div>
                </div>

                @if (!User.IsInRole("CLIENTE"))
                {
                    <div class="form-group mt-4">
                        @Html.LabelFor(model => model.CpfCliente, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("CpfCliente", null, htmlAttributes: new { @class = "form-control bg-transparent border-custom" })
                            @Html.ValidationMessageFor(model => model.CpfCliente, "", new { @class = "text-white" })
                        </div>
                    </div>
                }

                <div class="form-group mt-2">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Criar" class="btn btn-default bg-custom-yellow text-white mt-2" />
                    </div>
                </div>
            </div>
            <div class="m-2">
                @Html.ActionLink("Voltar", "Index")
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
