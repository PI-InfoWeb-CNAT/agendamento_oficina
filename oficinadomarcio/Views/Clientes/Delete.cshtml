@model oficinadomarcio.Models.Cliente

@{
    ViewBag.Title = "Apagar cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apagar</title>
</head>
<body>
    <div class="container-fluid m-3 p-3">
        <h3>Tem certeza que deseja apagar esse cliente?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Apagar" class="btn bg-primary text-white" /> |
                    @Html.ActionLink("Voltar a lista", "Index")
                </div>
            }
        </div>
    </div>
</body>
</html>
