@model oficinadomarcio.Models.Cliente

@{
    ViewBag.Title = "Adicioanr cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-3 m-3">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

