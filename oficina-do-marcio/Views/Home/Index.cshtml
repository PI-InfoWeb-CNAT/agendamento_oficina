@{
    ViewBag.Title = "Oficina do Márcio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid body-content m-0 p-0">

    <div id="carouselControl" class="carousel slide w-100" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselControl" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselControl" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselControl" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Assets/Group3.png" class=" img-body" alt="First Slide">
            </div>
            <div class="carousel-item">
                <img src="~/Assets/Group 1.png" class="img-body-exception" width="1920" alt="Second Slide">
            </div>
            <div class="carousel-item">
                <img src="~/Assets/2.png" class="img-body" alt="Third Slide">
            </div>
        </div>
    </div>

    <div class="container-fluid container-custom p-0">
        <div class="row h-100 w-100">
            <div class="justify-content-center align-items-center d-inline-flex bg-custom p-0">
                <span class="fs-2 text-uppercase">experiência com veículos aspirados, turbo ou 4x4</span>
            </div>
        </div>
    </div>

    <img src="~/Assets/troller.png" class="img-body" />

</div>





