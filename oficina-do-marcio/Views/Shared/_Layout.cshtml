                <div class="row">
                    <div class="d-inline-flex align-items-center justify-content-around">
                        <span>(84) 99981-1464</span>
                        <span>(84) 3223-7737</span>
                        <span>ompecaseservicos</span>
                        <span class="text-uppercase">&copy; desde 1993 atuando no mundo automotivo</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
